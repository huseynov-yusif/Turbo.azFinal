        $('#viewer1').imgadd({
            tnWidth: '120px',
            tnHeight: '120px',
            fontSize: '55px',
            plusInnerHtml: '',
            plusBtnClass: undefined
        });
    </script>
}
@section addcss{
    <link href="~/Libs/multiple-imager-js/css/imager.css" rel="stylesheet" />
